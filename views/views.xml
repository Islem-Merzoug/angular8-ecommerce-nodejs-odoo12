<?xml version="1.0"?>
<odoo>
    <data>
        <!-- explicit form view definition -->
        <record model="ir.ui.view" id="ecom_blog.form">
            <field name="name">ecom_blog form</field>
            <field name="model">ecom_blog.ecom_blog</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar"/>

                        <group>
                            <field name="name"/>
                        </group>

                        <group>
                            <field name="content"/>
                            <field name="description"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="ecom_blog.list">
            <field name="name">ecom_blog list</field>
            <field name="model">ecom_blog.ecom_blog</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="ecom_blog.action_window">
            <field name="name">ecom_blog window</field>
            <field name="res_model">ecom_blog.ecom_blog</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Add Text Here
                </p>
                <p>
                    More details about what a user can do with this object will be OK
                </p>
            </field>
        </record>


    </data>
</odoo>

